# ============================================
# WBTrade Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_URL="postgresql://wbtrade:wbtrade_secret@localhost:5432/wbtrade?schema=public"
POSTGRES_USER=wbtrade
POSTGRES_PASSWORD=wbtrade_secret
POSTGRES_DB=wbtrade

# ============================================
# Redis
# ============================================
REDIS_URL="redis://localhost:6379"

# ============================================
# Meilisearch
# ============================================
MEILI_HOST="http://localhost:7700"
MEILI_MASTER_KEY="wbtrade_meili_key_change_in_production"

# ============================================
# Application Settings
# ============================================
NODE_ENV=development
APP_PORT=5000
APP_URL="http://localhost:5000"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# ============================================
# Authentication (JWT)
# ============================================
JWT_ACCESS_SECRET="change_this_to_a_very_long_random_string_in_production"
JWT_REFRESH_SECRET="another_very_long_random_string_for_refresh_tokens"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# ============================================
# Email Service
# ============================================
# Development: use MailHog (localhost:1025)
# Production: use real SMTP service
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="WBTrade <noreply@wbtrade.pl>"

# Alternative: Resend API
RESEND_API_KEY=""

# ============================================
# Payment Providers
# ============================================
# Stripe
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PUBLISHABLE_KEY=""

# PayU / Przelewy24
PAYU_POS_ID=""
PAYU_MD5_KEY=""
PAYU_CLIENT_ID=""
PAYU_CLIENT_SECRET=""

# ============================================
# File Storage (S3 / Cloudflare R2)
# ============================================
S3_ENDPOINT=""
S3_REGION="auto"
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""
S3_BUCKET_NAME="wbtrade-assets"
S3_PUBLIC_URL=""

# ============================================
# Shipping Providers
# ============================================
# InPost
INPOST_API_KEY=""
INPOST_ORGANIZATION_ID=""

# ============================================
# Monitoring
# ============================================
SENTRY_DSN=""

# ============================================
# Development Tools (optional)
# ============================================
PGADMIN_EMAIL="admin@wbtrade.pl"
PGADMIN_PASSWORD="admin"

# ============================================
# Next.js Frontend (.env.local in apps/web)
# ============================================
NEXT_PUBLIC_API_URL="http://localhost:5000/api"
NEXT_PUBLIC_APP_URL="http://localhost:3000"