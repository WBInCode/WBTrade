# WBTrade API Environment Variables
# IMPORTANT: Copy this file to .env and fill in the values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/wbtrade?schema=public"

# ===========================================
# REDIS (Required for authentication security)
# ===========================================
REDIS_URL="redis://localhost:6379"

# ===========================================
# JWT SECRETS (CRITICAL - MUST BE UNIQUE AND STRONG)
# ===========================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# NEVER use default values in production!
JWT_ACCESS_SECRET="CHANGE_THIS_TO_A_STRONG_SECRET_AT_LEAST_64_CHARACTERS"
JWT_REFRESH_SECRET="CHANGE_THIS_TO_ANOTHER_STRONG_SECRET_AT_LEAST_64_CHARACTERS"

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV="development"
APP_PORT=5000
FRONTEND_URL="http://localhost:3000"

# ===========================================
# EMAIL SERVICE (for verification/reset emails)
# ===========================================
# SMTP_HOST="smtp.example.com"
# SMTP_PORT=587
# SMTP_USER="your-email@example.com"
# SMTP_PASSWORD="your-email-password"
# EMAIL_FROM="noreply@wbtrade.com"

# ===========================================
# SECURITY SETTINGS (optional overrides)
# ===========================================
# MAX_LOGIN_ATTEMPTS=5
# LOCKOUT_DURATION_MINUTES=15
# ACCESS_TOKEN_EXPIRY_MINUTES=15
# REFRESH_TOKEN_EXPIRY_DAYS=7

