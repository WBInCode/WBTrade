{
  "name": "wbtrade",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w wbtrade-web\" \"npm run dev -w wbtrade-api\"",
    "dev:all": "concurrently \"npm run dev -w wbtrade-web\" \"npm run dev -w wbtrade-api\" \"npm run dev -w wbtrade-admin\"",
    "dev:web": "npm run dev -w wbtrade-web",
    "dev:api": "npm run dev -w wbtrade-api",
    "dev:admin": "npm run dev -w wbtrade-admin",
    "build": "npm run build -w wbtrade-web && npm run build -w wbtrade-api && npm run build -w wbtrade-admin",
    "build:web": "npm run build -w wbtrade-web",
    "build:api": "npm run build -w wbtrade-api",
    "build:admin": "npm run build -w wbtrade-admin",
    "start": "npm run start -w wbtrade-web",
    "lint": "npm run lint -w wbtrade-api",
    "typecheck": "npm run typecheck -w wbtrade-api",
    "test": "npm run test -w wbtrade-api",
    "test:coverage": "npm run test:coverage -w wbtrade-api",
    "test:integration": "npm run test:integration -w wbtrade-api",
    "prisma:generate": "npm run prisma:generate -w wbtrade-api",
    "prisma:migrate": "npm run prisma:migrate -w wbtrade-api",
    "prisma:studio": "npm run prisma:studio -w wbtrade-api",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "overrides": {
      "qs": ">=6.14.1",
      "lodash": ">=4.17.23",
      "diff": ">=4.0.4",
      "react": "19.1.0",
      "react-dom": "19.1.0"
    }
  }
}